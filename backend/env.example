# Database
DATABASE_URL=postgresql://healthup:healthup@postgres/healthup

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=20160
REFRESH_TOKEN_EXPIRE_DAYS=30

# Cookie Configuration (for httpOnly cookies)
# Set to false for development, true for production
COOKIE_SECURE=false
# Leave empty for localhost, set to your domain for production
COOKIE_DOMAIN=
# Options: lax, strict, none
COOKIE_SAMESITE=lax

# Redis
REDIS_URL=redis://redis:6379

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# App Settings
ENVIRONMENT=development 

# MCP Server Configuration
MCP_TIMEOUT=30 